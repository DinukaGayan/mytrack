                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/cardview_image2"
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp"
                android:text="Monthly AWH : "
                android:textSize="22sp" />

            <TextView
