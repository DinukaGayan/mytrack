<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#ffff"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/android_card_view_example3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/MyCardViewStyle"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardElevation="24dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:text="Date : "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/datevalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/type"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:text="Date"
                android:layout_alignParentRight="true"/>


            <TextView
                android:id="@+id/timein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/type"
                android:text="Time In   : "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/timeinvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/timein"
                android:layout_below="@+id/datevalue"
                android:layout_marginTop="20dp"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:text="Time In"
                android:layout_alignParentRight="true"/>




            <TextView
                android:id="@+id/timeout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/timein"
                android:text="Time Out : "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/timeoutvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/timeout"
                android:layout_below="@+id/timeinvalue"
                android:layout_marginTop="20dp"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:text="Time Out"
                android:layout_alignParentRight="true"/>
<!-- ///////////////////////////////////////////////////////////-->


            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/timeout"
                android:text="Status: "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/weekday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/status"
                android:text="Weekday: "
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="22sp"
                />


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/cancel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:textColor="?attr/colorPrimary"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/weekday"
                android:padding="12dp"
                android:text="Cancel"
                android:backgroundTint="@android:color/white"
                android:elevation="0dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>